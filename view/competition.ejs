                                <div class="col-md-12">
                                    <div class="au-breadcrumb-content">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- END BREADCRUMB-->
    
                    <!-- WELCOME-->
                    <section class="welcome p-t-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12"><div class="statistic__item">
                                    <center>
                                        <% if(false){%> <!--최신 대회 모집 기간인 경우-->
                                               <!--대회 모집-->
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 모집 중 </div>
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 모집 신청 인원 </div>
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 투자 금액  </div>
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 남은 모집 기간  </div>

                                        <%}else if(false){%><!--대회 기간인 경우-->
                                            <!--대회 시작-->
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 대회 기간 </div>
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 참여 인원 </div>
                                        <div class="h3 mb-3 font-weight-bold text-primary "> 남은 시간  </div>
                                            
                                        <%}else{%><!--대회 끝난 경우-->
                                            <!--대회 끝 (새로운 대회 시작 전)-->
                                        <!-- <div class="h3 mb-3 font-weight-bold text-primary "> --대회 끝 </div> -->
                                        <div class="login-form">
                                            <div class="h3 mb-3 font-weight-bold text-primary "> 새로운 대회 생성 </div>
                                            <form action="" method="post">
                                                <div class="form-group">
                                                    <label>투자 금액</label>
                                                    <input class="au-input au-input--full" type="number" min="0" name="givenMoney">
                                                </div>
                                                <div class="form-group">
                                                    <label>시작 날짜</label>
                                                    <input class="au-input  au-input--full" type="date" name="startDate">
                                                    <label>끝 날짜</label>
                                                    <input class="au-input  au-input--full" type="date" name="endDate">
                                                </div>
                                                
                                                <button class="au-btn au-btn--block au-btn--blue m-b-20" type="submit">대회 생성</button>
                                            </form>
                                            <div class="register-link">
