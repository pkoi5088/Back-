    <div class="page-wrapper">
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar2">
            <%- include('./partial/menu-sidebar'); %>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <%if(true) {%> <!--user인 경우-->
                <div class ="section__content section__content--p30">
                    
                    <!-- BREADCRUMB-->
                    <section class="au-breadcrumb2">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="au-breadcrumb-content">
                                        <!-- <div class="au-breadcrumb-left">
                                            <form class="au-form-icon--sm" action="" method="post">
                                                <input class="au-input--w300 au-input--style2" type="text" placeholder="Search for datas &amp; reports...">
                                                <button class="au-btn--submit2" type="submit">
                                                    <i class="zmdi zmdi-search"></i>
                                                </button>
                                            </form>                                 
                                            
                                        </div> -->
                                        <% if(true){ <!--최신 대회 모집 기간인 경우-->
                                            if(false){%> <!-- 참여 신청 한 경우-->
                                                <div class="overview-wrap"></div>
                                                <button class="au-btn au-btn-icon au-btn--blue" disabled>신청 완료</button>
                                            </div>
                                            <%}else{%> <!-- 참여 신청 안 한 경우-->
                                                <div class="overview-wrap"></div>
                                                <button class="au-btn au-btn-icon au-btn--blue"> 제 11회 주식 모의 투자 대회 참가</button>
                                                </div>
                                            <%}%>

                                        <%}else if(true){%><!--대회 기간인 경우-->
                                            <div class="overview-wrap"></div>
                                            <button class="au-btn au-btn-icon au-btn--blue"><a href="invest.ejs">투자 하기</a></button>
                                        </div>
                                        <%}else{%><!--대회 끝난 경우-->
                                        <%}%>
                                           
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- END BREADCRUMB-->
                   
    
                    <% if(true){%> <!--최신 대회 모집 기간인 경우-->

                    <%}else{%><!--대회 끝난 경우-->
                    <%}%>
                    <!-- WELCOME-->
                    <section class="welcome p-t-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <center>
                                        <h2 class="title-4 font-weight-bold">
                                        <% if(true){ %><!--대회 기간인 경우-->
                                            제<%=1%>회 주식 모의 투자 랭킹
                                        <%}else{%><!--대회 끝난 경우-->
                                            
                                            제<%=2%>회 주식 모의 투자 랭킹
                                        <%}%>
                                        <!-- <span>John!</span> -->
                                        </h2>
                                    </center>
                                    
                                    <!--<hr class="line-seprate">-->
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- END WELCOME-->
    
                    <!-- STATISTIC-->
                    <section class="statistic statistic2">
                        <div class="container">
                            <div class="row">
                                <% if(true){%> <!--최신 대회 모집 기간인 경우 현재 대회 전 대회에 대한 랭킹 -->
                                    <% for(var i =0; i< 3; i++){%>
                                        <div class="col-lg-4">
                                            <div class="statistic__item">
                                                <center>
                                                    <div class="h3 mb-3 font-weight-bold text-primary "> <%=i%>위 </div>
                                                    <div class="h6 mb-2 font-weight-bold text-dark "> 이  름 : 홍길동 </div>
                                                    <div class="h6 mb-2 font-weight-bold text-dark"> 수  익 금 : 40,000만원</div>
                                                    <div class="h6 mb-2 font-weight-bold text-dark">수 익 률 : 50%</div>
                                                </center>
                                            </div>
                                        </div>
                                    <%}%>
                                <%}else{%><!--대회 끝난 경우 현재 대회 랭킹 표시-->
                                    <% for(var i =0; i< 3; i++) {%>
                                        <div class="col-lg-4">
                                            <div class="statistic__item">
                                                <center>
                                                    <div class="h3 mb-3 font-weight-bold text-primary "> <%=i%>위 </div>
                                                    <div class="h6 mb-2 font-weight-bold text-dark "> 이  름 :  </div>
                                                    <div class="h6 mb-2 font-weight-bold text-dark"> 수  익 금 :만원</div>
                                                    <div class="h6 mb-2 font-weight-bold text-dark">수 익 률 : %</div>
                                                </center>
                                            </div>
                                        </div>
                                    <%}%>
                                <%}%>
                         
                            </div>
                        </div>
                    </section>
                    <!-- END STATISTIC-->
    
                    <!-- STATISTIC CHART-->
                    <section class="statistic-chart">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-lg-5">
                                    <!-- TOP CAMPAIGN-->
                                    <div class="top-campaign">
                                        <h3 class="title-3 m-b-30">주식 모의 투자 대회 정보</h3>
                                        <div class="table-responsive">
                                            <table class="table table-top-campaign">
                                                <tbody>
                                                    <% for(var k=7; k>0; k--) {%>
                                                    <tr>
                                                        <td><button>제 <%=k%>회 주식 모의 투자 대회 (new) &nbsp 2020.11.11</button></td>
                                                    </tr>
                                                    <%}%>
                                                   
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!-- END TOP CAMPAIGN-->
                                </div> 
                                <!-- CHART-->
                                <div class="col-md-6 col-lg-7">
                                    <div class="statistic-chart-1">
                                        <h3 class="title-3 m-b-30 font-weight-bold ">My 주식 모의 투자 대회 정보</h3>
                                        <div class="chart-wrap">
                                            <canvas id="team-chart"></canvas>
                                        </div>
                                    </div>
                                </div>
                                <!-- END CHART-->
                                 
                                
                            </div>
                        </div>
                    </section>
                                       
                    <!-- END DATA TABLE-->
                </div>

